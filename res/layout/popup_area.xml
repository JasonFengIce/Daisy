<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#e5000000"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <GridView
            android:descendantFocusability="afterDescendants"
            android:focusable="true"
            android:verticalSpacing="@dimen/locationFragment_provinceGrid_verticalSpacing"
            android:layout_marginTop="@dimen/location_grid_margin_top"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/area_grid"
            android:numColumns="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/locationFragment_provinceGrid_marginLR"
            android:layout_marginRight="@dimen/locationFragment_provinceGrid_marginLR"
            >
    </GridView>

</LinearLayout>