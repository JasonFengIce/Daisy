<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sakura="http://schemas.android.com/apk/res/tv.ismar.daisy"
    android:id="@+id/large_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="88dip"
        android:orientation="horizontal"
        android:layout_marginLeft="222dip">
    <TextView
        android:text="搜索结果 :"
        android:id="@+id/filter_result_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="48sp" />

     <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/filter_condition_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        </LinearLayout>

</LinearLayout>
    <ProgressBar
            android:layout_marginTop="10dip"
            android:id="@+id/filter_percentage"
            android:layout_width="1475dip"
            android:layout_height="4dip"
            android:progressDrawable="@drawable/progressbg"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:visibility="visible"
            android:layout_marginLeft="222dip"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:visibility="invisible"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/left_shadow"
                android:layout_width="41dip"
                android:layout_height="82dip"
                android:background="@drawable/channel_arrow_left"
                android:layout_marginLeft="31dip"
                android:layout_marginTop="354dip"
                />
        <Button
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:id="@+id/right_shadow"
                android:layout_width="41dip"
                android:layout_height="82dip"
                android:background="@drawable/channel_arrow_right"
                android:layout_marginTop="354dip"
                android:layout_marginRight="31dip"/>
        <org.sakuratya.horizontal.ui.HGridView
                android:layout_toLeftOf="@id/right_shadow"
                android:layout_toRightOf="@id/left_shadow"
                android:id="@+id/filter_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                sakura:horizontalSpacing="115dip"
                sakura:numRows="3"
                sakura:rowHeight="272dip"
                sakura:selectorDrawable="@drawable/popup_bg_yellow"
                sakura:verticalSpacing="0dip"
                sakura:selectionLeftPadding="@dimen/HGridView_related_selectionLeftPadding"
                sakura:selectionTopPadding="@dimen/HGridView_related_selectionTopPadding"
                sakura:selectionRightPadding="@dimen/HGridView_related_selectionRightPadding"
                sakura:selectionBottomPadding="@dimen/HGridView_related_selectionBottomPadding"
                android:paddingTop="4dip"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="39dip"
                android:layout_marginRight="39dip"
                android:layout_marginBottom="71dip"
                android:paddingRight="5dip"
                android:paddingLeft="4dip">
        </org.sakuratya.horizontal.ui.HGridView>
    </RelativeLayout>

</LinearLayout>

    <LinearLayout
            android:visibility="gone"
            android:id="@+id/noresult_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/nofilter_top_layout"
                android:layout_width="match_parent"
                android:layout_height="300dip"
                android:orientation="vertical"
                >
            <TextView
                    android:layout_marginTop="30dip"
                    android:text="抱歉,您的筛选条件太多了,没有找到匹配的内容"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="48sp" />

            <Button
                    android:layout_marginTop="50dip"
                    android:layout_gravity="center_horizontal"
                    android:text="重新筛选"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:id="@+id/refilter_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="100dip"
                    android:background="@drawable/filter_btn_selector"
                    android:textColor="@android:color/white">
            </Button>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="222dip"
                    android:layout_marginTop="20dip"
                    android:textSize="36sp"
                    android:textColor="@android:color/white"
                    android:text="当前大家正在看"/>
        </LinearLayout>
        <ProgressBar
                android:id="@+id/recommend_filter_percentage"
                android:layout_width="1475dip"
                android:layout_height="4dip"
                android:progressDrawable="@drawable/progressbg"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:visibility="visible"
                android:layout_marginLeft="222dip"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:visibility="invisible"
                    android:clickable="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/recommend_left_shadow"
                    android:layout_width="41dip"
                    android:layout_height="82dip"
                    android:background="@drawable/channel_arrow_left"
                    android:layout_marginLeft="31dip"
                    android:layout_marginTop="220dip"
                    />
            <Button
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:id="@+id/recommend_right_shadow"
                    android:layout_width="41dip"
                    android:layout_height="82dip"
                    android:background="@drawable/channel_arrow_right"
                    android:layout_marginTop="220dip"
                    android:layout_marginRight="31dip"/>
            <org.sakuratya.horizontal.ui.HGridView
                    android:layout_toLeftOf="@id/recommend_right_shadow"
                    android:layout_toRightOf="@id/recommend_left_shadow"
                    android:id="@+id/recommend_filter_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    sakura:horizontalSpacing="115dip"
                    sakura:numRows="2"
                    sakura:rowHeight="272dip"
                    sakura:selectorDrawable="@drawable/popup_bg_yellow"
                    sakura:verticalSpacing="@dimen/gridview_main_panel_verticalSpacing"
                    sakura:selectionLeftPadding="@dimen/HGridView_related_selectionLeftPadding"
                    sakura:selectionTopPadding="@dimen/HGridView_related_selectionTopPadding"
                    sakura:selectionRightPadding="@dimen/HGridView_related_selectionRightPadding"
                    sakura:selectionBottomPadding="@dimen/HGridView_related_selectionBottomPadding"
                    android:paddingTop="4dip"
                    android:layout_marginTop="8dip"
                    android:layout_marginLeft="39dip"
                    android:layout_marginRight="39dip"
                    android:layout_marginBottom="71dip"
                    android:paddingRight="5dip"
                    android:paddingLeft="4dip">
            </org.sakuratya.horizontal.ui.HGridView>
        </RelativeLayout>
  </LinearLayout>
</LinearLayout>