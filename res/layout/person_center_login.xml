<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/person_login_layout_PL"
    android:paddingTop="@dimen/person_login_layout_PT" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/person_login_content_layout_H"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/person_login_phone_text_W"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号:"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_login_phone_text_size" />

        <EditText
            android:id="@+id/pay_edit_mobile"
            android:layout_width="@dimen/person_login_phone_edit_W"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/person_login_phone_view_ML"
            android:background="@drawable/edit_selector"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_login_phone_edit_text_size"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/person_login_phone_edit_PL"/>

        <Button
            android:id="@+id/pay_identifyCodeBtn"
            android:layout_width="@dimen/person_login_pay_identifyCodeBtn_W"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/person_login_phone_view_ML"
            android:text="获取验证码"
            android:textSize="@dimen/person_login_phone_edit_text_size"
            android:textColor="#FFF8F8FF"
            android:background="@drawable/person_btn_selector"/>
    </LinearLayout>

    <TextView
        android:id="@+id/pay_count_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/person_login_pay_count_tip_H"
        android:gravity="bottom|center_horizontal"
        android:visibility="invisible"
        android:text="60秒后可再次点击获取验证码"
        android:textSize="@dimen/person_login_pay_count_tip_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/person_login_content_layout_H"
        android:layout_marginTop="@dimen/person_login_content_MT"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/person_login_phone_text_W"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="验证码:"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_center_btn_text_size" />

        <EditText
            android:id="@+id/pay_edit_identifycode"
            android:layout_width="@dimen/person_login_phone_edit_W"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/person_login_phone_view_ML" 
            android:background="@drawable/edit_selector"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_login_phone_edit_text_size"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/person_login_phone_edit_PL"/>
    </LinearLayout>

    <Button
        android:id="@+id/pay_btn_submit"
        android:layout_width="@dimen/person_pay_btn_submit_W"
        android:layout_height="@dimen/person_pay_btn_submit_H"
        android:layout_marginTop="@dimen/person_pay_btn_submit_MT"
        android:background="@drawable/person_btn_selector"
        android:text="确定提交"
        android:textColor="#FFF8F8FF"
        android:textSize="@dimen/person_login_phone_edit_text_size"
       android:layout_marginLeft="@dimen/person_pay_btn_submit_ML"/>

</LinearLayout>