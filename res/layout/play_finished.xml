     <org.sakuratya.horizontal.ui.ZGridView
        android:id="@+id/gridview_related"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="@dimen/gridview_main_panel_fadingEdgeLength"
        sakura:columnWidth="@dimen/playfinish_gridview_item_linearimage_W"
        sakura:horizontalSpace="35dip"
        sakura:listSelector="@drawable/vod_gv_selector"
        sakura:numColumns="3"
        sakura:stretchMode="columnWidth"
        sakura:verticalSpace="10dip"
        android:layout_margin="@dimen/play_finished_gridview_related_margin"
        sakura:selectorLeftPadding="12dip"
        sakura:selectorTopPadding="19dip"
        sakura:selectorRightPadding="11dip"
        sakura:selectorBottomPadding="-26dip">
    </org.sakuratya.horizontal.ui.ZGridView>
    </LinearLayout>
    <!-- 右边整块 -->

</LinearLayout>