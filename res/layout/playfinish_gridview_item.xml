<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/playfinish_gridview_item_marginbottom"
        android:layout_marginLeft="@dimen/playfinish_gridview_item_marginleft"
        android:layout_marginRight="@dimen/playfinish_gridview_item_marginright"
        android:layout_marginTop="@dimen/playfinish_gridview_item_margintop" >

        <LinearLayout
            android:id="@+id/linearimage"
            android:layout_width="@dimen/playfinish_gridview_item_linearimage_W"
            android:layout_height="@dimen/playfinish_gridview_item_linearimage_H"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
     
             >      
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="@dimen/playfinish_gridview_item_linearimage_W"
            android:layout_height="@dimen/playfinish_gridview_item_linearimage_H"
            android:background="@drawable/video_item_selector"
            android:paddingLeft="@dimen/playfinish_gridview_item_itemImage_PL"
            android:paddingRight="@dimen/playfinish_gridview_item_itemImage_PL"
            android:paddingTop="@dimen/playfinish_gridview_item_itemImage_PL"
            android:paddingBottom="@dimen/playfinish_gridview_item_itemImage_PL"
            android:scaleType="fitXY"
             />
</LinearLayout>
        <TextView
            android:id="@+id/itemText"
            style="@drawable/gridview_text_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearimage"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/playfinish_gridview_item_itemText_marginleft"
            android:layout_marginRight="@dimen/playfinish_gridview_item_itemText_marginright"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="@dimen/playfinish_gridview_item_itemText_textsize"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_label"
        android:layout_width="@dimen/playfinish_gridview_iv_label_W"
        android:layout_height="@dimen/playfinish_gridview_iv_label_H"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/playfinish_gridview_item_iv_label_marginright"
        android:layout_marginTop="@dimen/playfinish_gridview_item_iv_label_margintop" />

</FrameLayout>