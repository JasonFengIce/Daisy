<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="80dp"
    android:paddingRight="80dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:paddingTop="@dimen/guide_padding" >

        <tv.ismar.daisy.views.LabelImageView
            xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
            android:id="@+id/film_lefttop_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:background="@drawable/launcher_selector"
            android:focusable="true"
            android:src="@drawable/list_item_preview_bg"
            labelimage:focusbackground="#b3303030"
            labelimage:focuspaddingtop="453dp"
            labelimage:focustextpaddingtop="34dp"
            labelimage:focustextsize="32sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/guide_padding"
            android:layout_weight="5.7"
            android:focusable="true"
            android:background="@drawable/launcher_selector" >

            <tv.ismar.daisy.ui.widget.DaisyVideoView
                android:id="@+id/film_linked_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/guide_padding"
                android:background="@drawable/launcher_selector"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <tv.ismar.daisy.views.LabelImageView
                android:id="@+id/film_linked_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                android:visibility="gone" />

            <TextView
                android:id="@+id/film_linked_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom|center"
                android:background="#b3808080"
                android:gravity="left|center"
                android:textSize="18sp"
                android:paddingLeft="30dp"
                android:visibility="gone"
                 />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/film_carousel_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/film_recommend_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/guide_padding"
        android:paddingTop="@dimen/guide_padding" >
    </LinearLayout>

</LinearLayout>