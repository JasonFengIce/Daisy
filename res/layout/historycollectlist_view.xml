<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sakura="http://schemas.android.com/apk/res/tv.ismar.daisy"
    android:id="@+id/large_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/arrow_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_panel_view_height"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/channel_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/gridview_channel_label_marginleft"
        android:layout_marginRight="@dimen/gridview_channel_label_marginright"
        android:gravity="center"
        android:textColor="#FFBBBBBB"
        android:textSize="@dimen/gridview_channel_label_textsize" />
    <ImageView
        android:id="@+id/gridview_line"
        android:layout_marginLeft="@dimen/gridview_line_ML"
        android:layout_width="@dimen/gridview_main_gridview_line_W"
        android:layout_height="@dimen/gridview_main_gridview_line_H"
        android:background="@drawable/listview_p_divider"
        android:visibility="visible" />
                  
           <Button
           android:layout_width="wrap_content"
           android:layout_height="@dimen/list_view_search_H"
           android:layout_marginLeft="@dimen/list_view_search_ML"
           android:layout_gravity="center_vertical"
           android:focusable="true"
           android:id="@+id/list_view_search"
           android:background="@drawable/search_btn_bg_selector" />
</LinearLayout>

    <ImageView
            android:layout_marginLeft="@dimen/divider_margin_MLR"
            android:layout_marginRight="@dimen/divider_margin_MLR"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/orderlistdivide"
            android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/tabs_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_channel_panel_height"
        android:layout_marginLeft="@dimen/channel_section_tabs_layout_marginLeft"
        android:orientation="horizontal"
         android:visibility="gone"
        >
           <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="@dimen/grid_view_main_arrow_left_W"
            android:layout_height="@dimen/grid_view_main_arrow_left_H"
            android:layout_marginTop="@dimen/grid_view_main_arrow_left_marginT"
            android:background="@drawable/arrow_left_selector"
            android:visibility="invisible" 
           />
           
        <tv.ismar.daisy.views.ScrollableSectionList
            android:visibility="gone"
            android:id="@+id/section_tabs"
            android:layout_width="@dimen/gridview_channel_section_tabs_width"
            android:layout_height="match_parent"
            android:scrollbars="none"
             android:focusable="false" 
             android:focusableInTouchMode="false">
        </tv.ismar.daisy.views.ScrollableSectionList>

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="@dimen/grid_view_main_arrow_left_W"
            android:layout_height="@dimen/grid_view_main_arrow_left_H"
            android:layout_marginTop="@dimen/grid_view_main_arrow_left_marginT"
            android:background="@drawable/arrow_right_selector"
            android:visibility="invisible"
            />
    </LinearLayout>
