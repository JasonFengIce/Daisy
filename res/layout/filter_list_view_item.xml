<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/filter_item_layout"
    >
    <tv.ismar.daisy.views.LabelImageView
            xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
            android:layout_width="@dimen/gridview_item_image_W"
            android:layout_height="@dimen/filter_list_item_preview_img_h"
            android:id="@+id/filter_list_item_preview_img"
            android:background="@drawable/list_item_preview_bg"
            android:layout_alignParentTop="true"
            android:paddingTop="@dimen/gridview_item_image_PaddingT"
            android:paddingBottom="@dimen/gridview_item_image_PaddingB"
            android:paddingLeft="@dimen/gridview_item_image_PaddingL"
            android:paddingRight="@dimen/gridview_item_image_PaddingR"
            labelimage:focuspaddingtop="0.87"
            labelimage:focustextsize="@dimen/item_detail_detail_price_textsize"
            labelimage:maxfocustitle="10"
            labelimage:focustextpaddingtop="0.97"
            labelimage:focusbackground="#b3303030"
            android:scaleType="fitXY"/>
    <TextView
        android:paddingTop="@dimen/filter_list_item_title_mt"
        android:paddingBottom="@dimen/filter_list_item_title_pb"
        android:layout_width="@dimen/filter_list_item_title_w"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/filter_list_item_preview_img"
        android:textSize="@dimen/filter_list_item_title_textsize"
        android:id="@+id/filter_list_item_title"
        android:textColor="#FFF8F8FF"
        />
</RelativeLayout>