<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:orientation="horizontal"
        android:layout_marginBottom="35dip">
        <TextView
            android:id="@+id/channel_label"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:gravity="center"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="40dip"
            android:layout_marginRight="40dip"
            android:textSize="72sp"
            android:textColor="#FFBBBBBB"
            android:background="@drawable/channel_label_bg"
            android:padding="10dip"/>
        <tv.ismar.daisy.views.ScrollableSectionList
            android:id="@+id/section_tabs"
            android:layout_width="1365dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="174dip"
            android:scrollbars="none">
            
        </tv.ismar.daisy.views.ScrollableSectionList>
    </LinearLayout>
    <tv.ismar.daisy.views.ItemListScrollView
        android:layout_width="wrap_content"
        android:layout_height="810dip"
        android:id="@+id/itemlist_scroll_view">
        
    </tv.ismar.daisy.views.ItemListScrollView>
    <RelativeLayout
        android:layout_width="1480dip"
        android:layout_height="681dip"
        android:id="@+id/no_video_container"
        android:layout_marginLeft="280dip"
        android:visibility="gone">
    </RelativeLayout>
</LinearLayout>