<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sakura="http://schemas.android.com/apk/res/tv.ismar.daisy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_channel_panel_height"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/gridview_channel_panel_marginBottom">
        <TextView
            android:id="@+id/channel_label"
            android:layout_width="@dimen/gridview_channel_label_width"
            android:layout_height="@dimen/gridview_channel_label_height"
            android:gravity="center"
            android:layout_marginLeft="@dimen/gridview_channel_label_marginleft"
            android:layout_marginTop="@dimen/gridview_channel_label_margintop"
            android:layout_marginRight="@dimen/gridview_channel_label_marginright"
            android:textSize="@dimen/gridview_channel_label_textsize"
            android:textColor="#FFBBBBBB"
            android:padding="@dimen/gridview_channel_label_padding"/>
        <ImageView 
            android:id="@+id/gridview_line"
            android:layout_height="123dip"
            android:layout_width="2dip"
            android:background="@drawable/vodplayer_channels_bg"/>
     
        <tv.ismar.daisy.views.ScrollableSectionList
            android:id="@+id/section_tabs"
            android:layout_width="@dimen/gridview_channel_section_tabs_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gridview_channel_section_tabs_margintop"
            android:scrollbars="none">
            
        </tv.ismar.daisy.views.ScrollableSectionList>
        <ImageView
            android:id="@+id/arrow_left"
            android:layout_marginTop="108dip"
            android:layout_height="24dip"
            android:layout_width="20dip"
            android:background="@drawable/vod_arrow_right_normal"
            android:visibility="invisible"/>
    </LinearLayout>
    <org.sakuratya.horizontal.ui.HGridView
        android:id="@+id/h_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="@dimen/gridview_main_panel_fadingEdgeLength"
        sakura:horizontalSpacing="@dimen/gridview_main_panel_horizontalSpacing"
        sakura:verticalSpacing="@dimen/gridview_main_panel_verticalSpacing"
        sakura:rowHeight="@dimen/gridview_main_panel_rowHeight" 
        sakura:numRows="3"
        sakura:selectorDrawable="@drawable/vod_gv_selector"
        sakura:labelDrawable="@drawable/section_label_drawable"
        sakura:labelBackgroundDrawable="@drawable/section_shadow_bg"
        sakura:labelTopOffset="@dimen/gridview_main_panel_labelTopOffset"
        sakura:labelLeftOffset="@dimen/gridview_main_panel_labelLeftOffset"
        sakura:labelWidth="@dimen/gridview_main_panel_labelWidth"
        sakura:labelHeight="@dimen/gridview_main_panel_labelHeight"
        sakura:labelBackgroundLeftOffset="@dimen/gridview_main_panel_labelBackgroundLeftOffset"
        sakura:labelBackgroundWidth="@dimen/gridview_main_panel_labelBackgroundWidth"
        sakura:labelBackgroundHeight="@dimen/gridview_main_panel_labelBackgroundHeight"
        sakura:labelTextSize="@dimen/gridview_main_panel_labelTextSize"
        sakura:labelTextColor="#FFF8F8FF"
        sakura:labelTextMarginTop="@dimen/gridview_main_panel_labelTextMarginTop"
        sakura:labelTextMarginLeft="@dimen/gridview_main_panel_labelTextMarginLeft"
        sakura:labelTextMarginBottom="@dimen/gridview_main_panel_labelTextMarginBottom"
        sakura:labelTextMarginRight="@dimen/gridview_main_panel_labelTextMarginRight"
        >
        
    </org.sakuratya.horizontal.ui.HGridView>
    <RelativeLayout
        android:layout_width="@dimen/gridview_no_video_container_width"
        android:layout_height="@dimen/gridview_no_video_container_height"
        android:id="@+id/no_video_container"
        android:layout_marginLeft="@dimen/gridview_no_video_container_marginLeft"
        android:visibility="gone">
    </RelativeLayout>
</LinearLayout>