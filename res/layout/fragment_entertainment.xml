<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fragment_padding_lr"
    android:paddingRight="@dimen/fragment_padding_lr" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/entertainment_linearLayout_margin"
        android:layout_weight="2.06"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/vaiety_lefttop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/entertainment_vaiety_lefttop_margin"
            android:layout_weight="1.11"
            android:clipChildren="false"
            android:clipToPadding="false" >

            <tv.ismar.daisy.views.AsyncImageView
                android:id="@+id/vaiety_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <tv.ismar.daisy.views.AsyncImageView
                    android:id="@+id/vaiety_thumb1"
                    android:layout_width="@dimen/entertainment_vaiety_thumb_w"
                    android:layout_height="@dimen/entertainment_vaiety_thumb_h"
                    android:focusable="true"
                    android:paddingBottom="@dimen/entertainment_vaiety_thumb_padding"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_item_preview_bg" />

                <tv.ismar.daisy.views.AsyncImageView
                    android:id="@+id/vaiety_thumb2"
                    android:layout_width="@dimen/entertainment_vaiety_thumb_w"
                    android:layout_height="@dimen/entertainment_vaiety_thumb_h"
                    android:focusable="true"
                    android:paddingBottom="@dimen/entertainment_vaiety_thumb_padding"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/entertainment_vaiety_fouce_label_margin"
                    android:src="@drawable/list_item_preview_bg" />

                <tv.ismar.daisy.views.AsyncImageView
                    android:id="@+id/vaiety_thumb3"
                    android:layout_width="@dimen/entertainment_vaiety_thumb_w"
                    android:layout_height="@dimen/entertainment_vaiety_thumb_h"
                    android:focusable="true"
                    android:paddingBottom="@dimen/entertainment_vaiety_thumb_padding"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/entertainment_vaiety_fouce_label_margin"
                    android:src="@drawable/list_item_preview_bg" />

                <TextView
                    android:id="@+id/vaiety_fouce_label"
                    android:layout_width="@dimen/entertainment_vaiety_fouce_label_w"
                    android:layout_height="@dimen/entertainment_vaiety_fouce_label_h"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/entertainment_vaiety_fouce_label_margin"
                    android:background="@color/shawdow"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/entertainment_vaiety_fouce_label_textsize" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vaiety_righttop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/entertainment_vaiety_righttop_mt"
            android:layout_marginLeft="@dimen/entertainment_vaiety_righttop_ml"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false" >

            <tv.ismar.daisy.ui.widget.LinerLayoutContainer
                android:id="@+id/vaiety_card1"
                android:layout_width="@dimen/entertainment_vaiety_card_w"
                android:layout_height="@dimen/entertainment_vaiety_card_h"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:clickable="true"
                android:orientation="vertical"
                android:background="@drawable/entertainment_item_bg"
                 >

                <tv.ismar.daisy.views.LabelImageView
                    xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                    android:id="@+id/vaiety_card1_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/entertainment_vaiety_card_image_h"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/entertainment_vaiety_card_image_margin"
                    labelimage:focusbackground="@color/shawdow"
                    labelimage:focuspaddingtop="0.89"
                    labelimage:focustextsize="@dimen/entertainment_vaiety_card_image_textsize"
                     />

                <TextView
                    android:id="@+id/vaiety_card1_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/entertainment_vaiety_card_subtitle_textsize" />
            </tv.ismar.daisy.ui.widget.LinerLayoutContainer>

            <tv.ismar.daisy.ui.widget.LinerLayoutContainer
                android:id="@+id/vaiety_card2"
                android:layout_width="@dimen/entertainment_vaiety_card_w"
                android:layout_height="@dimen/entertainment_vaiety_card_h"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/entertainment_vaiety_card_ml"
                android:layout_toRightOf="@+id/vaiety_card1"
                android:background="@drawable/entertainment_item_bg">

                <tv.ismar.daisy.views.LabelImageView
                    xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                    android:id="@+id/vaiety_card2_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/entertainment_vaiety_card_image_h"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/entertainment_vaiety_card_image_margin"
                    labelimage:focusbackground="@color/shawdow"
                    labelimage:focuspaddingtop="0.89"
                    android:src="@drawable/list_item_preview_bg"
                    labelimage:focustextsize="@dimen/entertainment_vaiety_card_image_textsize"
                     />

                <TextView
                    android:id="@+id/vaiety_card2_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/entertainment_vaiety_card_subtitle_textsize" />
            </tv.ismar.daisy.ui.widget.LinerLayoutContainer>

            <tv.ismar.daisy.ui.widget.LinerLayoutContainer
                android:id="@+id/vaiety_card3"
                android:layout_width="@dimen/entertainment_vaiety_card_w"
                android:layout_height="@dimen/entertainment_vaiety_card_h"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:layout_below="@+id/vaiety_card1"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/entertainment_item_bg" >

                <tv.ismar.daisy.views.LabelImageView
                    xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                    android:id="@+id/vaiety_card3_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/entertainment_vaiety_card_image_h"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/entertainment_vaiety_card_image_margin"
                    labelimage:focusbackground="@color/shawdow"
                    labelimage:focuspaddingtop="0.89"
                    android:src="@drawable/list_item_preview_bg"
                    labelimage:focustextsize="@dimen/entertainment_vaiety_card_image_textsize"
                     />

                <TextView
                    android:id="@+id/vaiety_card3_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top" 
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="@dimen/entertainment_vaiety_card_subtitle_mt"
                    android:textSize="@dimen/entertainment_vaiety_card_subtitle_textsize" />
            </tv.ismar.daisy.ui.widget.LinerLayoutContainer>

            <tv.ismar.daisy.ui.widget.LinerLayoutContainer
                android:id="@+id/vaiety_card4"
                android:layout_width="@dimen/entertainment_vaiety_card_w"
                android:layout_height="@dimen/entertainment_vaiety_card_h"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/vaiety_card3"
                android:layout_below="@+id/vaiety_card2"
                android:layout_marginLeft="@dimen/entertainment_vaiety_card_ml"
                android:background="@drawable/entertainment_item_bg"  >

                <tv.ismar.daisy.views.LabelImageView
                    xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                    android:id="@+id/vaiety_card4_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/entertainment_vaiety_card_image_h"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/entertainment_vaiety_card_image_margin"
                    labelimage:focusbackground="@color/shawdow"
                    labelimage:focuspaddingtop="0.89"
                    android:src="@drawable/list_item_preview_bg"
                    labelimage:focustextsize="@dimen/entertainment_vaiety_card_image_textsize"
                     />

                <TextView
                    android:id="@+id/vaiety_card4_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top" 
                    android:layout_marginTop="@dimen/entertainment_vaiety_card_subtitle_mt"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/entertainment_vaiety_card_subtitle_textsize" />
            </tv.ismar.daisy.ui.widget.LinerLayoutContainer>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/vaiety_channel1"
            android:layout_width="@dimen/entertainment_vaiety_channel_w"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/vaiety_channel1_image"
                android:layout_width="@dimen/entertainment_vaiety_channel_image_w"
                android:layout_height="@dimen/entertainment_vaiety_channel_image_h"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="@color/shawdow"
                labelimage:focustextsize="@dimen/entertainment_vaiety_fouce_label_textsize" />

            <TextView
                android:id="@+id/vaiety_channel1_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaiety_channel1_image"
                android:layout_marginTop="@dimen/entertainment_vaiety_channel_title_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/entertainment_vaiety_channel_title_textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vaiety_channel2"
            android:layout_width="@dimen/entertainment_vaiety_channel_w"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/entertainment_vaiety_channel_ml_1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/vaiety_channel2_image"
                android:layout_width="@dimen/entertainment_vaiety_channel_image_w"
                android:layout_height="@dimen/entertainment_vaiety_channel_image_h"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="@color/shawdow"
                labelimage:focustextsize="@dimen/entertainment_vaiety_fouce_label_textsize" />

            <TextView
                android:id="@+id/vaiety_channel2_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaiety_channel2_image"
                android:layout_marginTop="@dimen/entertainment_vaiety_channel_title_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/entertainment_vaiety_channel_title_textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vaiety_channel3"
            android:layout_width="@dimen/entertainment_vaiety_channel_w"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/entertainment_vaiety_channel_ml"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/vaiety_channel3_image"
                android:layout_width="@dimen/entertainment_vaiety_channel_image_w"
                android:layout_height="@dimen/entertainment_vaiety_channel_image_h"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="@color/shawdow"
                labelimage:focustextsize="@dimen/entertainment_vaiety_fouce_label_textsize" />

            <TextView
                android:id="@+id/vaiety_channel3_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaiety_channel3_image"
                android:layout_marginTop="@dimen/entertainment_vaiety_channel_title_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/entertainment_vaiety_channel_title_textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vaiety_channel4"
            android:layout_width="@dimen/entertainment_vaiety_channel_w"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/entertainment_vaiety_channel_ml"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/vaiety_channel4_image"
                android:layout_width="@dimen/entertainment_vaiety_channel_image_w"
                android:layout_height="@dimen/entertainment_vaiety_channel_image_h"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="@color/shawdow"
                labelimage:focustextsize="@dimen/entertainment_vaiety_fouce_label_textsize" />

            <TextView
                android:id="@+id/vaiety_channel4_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaiety_channel4_image"
                android:layout_marginTop="@dimen/entertainment_vaiety_channel_title_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/entertainment_vaiety_channel_title_textsize" />
        </RelativeLayout>

        <include
            android:layout_width="@dimen/entertainment_vaiety_channel_w"
            android:layout_height="@dimen/entertainment_vaiety_channel_image_h"
            android:layout_marginLeft="@dimen/entertainment_vaiety_channel_ml"
            layout="@layout/toppagelistmorebutton" />
    </LinearLayout>

</LinearLayout>