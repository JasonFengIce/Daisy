<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vodbg"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    android:paddingLeft="260dp"
    android:paddingRight="260dp"
    android:paddingTop="200dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="480px"
            android:layout_height="271px"
            android:layout_marginLeft="10dp"
            android:background="@drawable/image_back" >

            <ImageView
                android:id="@+id/image_daram_back"
                android:layout_width="478px"
                android:layout_height="269px"
                android:layout_marginLeft="1px"
                android:layout_marginTop="1px"
                android:focusable="false" />

            <ImageView
                android:id="@+id/image_daram_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/image_daram_back"
                android:layout_alignTop="@+id/image_daram_back"
                android:layout_marginRight="-3px"
                android:layout_marginTop="-3px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_drama_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="55dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_daram_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36dp" />

                <TextView
                    android:id="@+id/tv_daram_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="36dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/drama_gridview"
            layout="@layout/daram_gridview" />
    </LinearLayout>

</LinearLayout>