<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/pay_qrcode_pay_panel_marginleft"
    android:layout_marginTop="@dimen/pay_qrcode_pay_panel_margintop"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号:"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/pay_edit_mobile"
            android:layout_width="500dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dip"
            android:background="@drawable/edit_selector"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:textColor="#FFF8F8FF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/pay_identifyCodeBtn"
            android:layout_width="200dip"
            android:layout_height="65dp"
            android:layout_marginLeft="40dip"
            android:background="@drawable/person_btn_selector"
            android:text="获取验证码"
            android:textColor="#FFF8F8FF"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pay_count_tip"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="bottom|center_horizontal"
        android:text="60秒后可再次点击获取验证码"
        android:textSize="20sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="验证码:"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/pay_edit_identifycode"
            android:layout_width="500dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dip"
            android:background="@drawable/edit_selector"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:textColor="#FFF8F8FF"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/pay_btn_submit"
        android:layout_width="200dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="275dip"
        android:layout_marginTop="100dip"
        android:background="@drawable/person_btn_selector"
        android:text="确定提交"
        android:textColor="#FFF8F8FF"
        android:textSize="30sp" />

</LinearLayout>