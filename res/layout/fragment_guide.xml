<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingLeft="@dimen/fragment_padding_lr"
              android:paddingRight="@dimen/fragment_padding_lr"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:paddingTop="@dimen/guide_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            >

        <VideoView
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/launcher_selector"
                android:layout_marginRight="@dimen/guide_padding"
                android:id="@+id/linked_video"
                android:layout_width="0dp"
                android:layout_weight="14.7"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:id="@+id/carousel_layout"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:paddingTop="@dimen/guide_padding"
            android:paddingBottom="@dimen/guide_padding"
            android:orientation="horizontal"
            android:id="@+id/recommend_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            >
    </LinearLayout>

</LinearLayout>