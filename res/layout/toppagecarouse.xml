<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-5dp"
     >

    <tv.ismar.daisy.views.LabelImageView
        xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
        android:id="@+id/toppage_carous_imageView1"
        android:layout_width="303dp"
        android:layout_height="169dp"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:scaleType="fitXY"
        labelimage:frontcolor="#d9000000"
        labelimage:customfocus="true"
         />

    <tv.ismar.daisy.views.LabelImageView
        xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
        android:id="@+id/toppage_carous_imageView2"
        android:layout_width="303dp"
        android:layout_height="169dp"
        android:layout_below="@+id/toppage_carous_imageView1"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:scaleType="fitXY"
        android:layout_marginTop="-1.5dp"
        labelimage:frontcolor="#d9000000"
        labelimage:customfocus = "true"
         />

    <tv.ismar.daisy.views.LabelImageView
        xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
        android:id="@+id/toppage_carous_imageView3"
        android:layout_width="303dp"
        android:layout_height="169dp"
        android:layout_below="@+id/toppage_carous_imageView2"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:scaleType="fitXY"
        android:layout_marginTop="-1.5dp"
        labelimage:frontcolor="#d9000000"
        labelimage:customfocus = "true"
         />

</RelativeLayout>