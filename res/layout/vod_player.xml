<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RootRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:foreground="@android:color/transparent" >

    <tv.ismar.daisy.views.IsmatvVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" >
    </tv.ismar.daisy.views.IsmatvVideoView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:foreground="@android:color/transparent" >

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alpha="0.8"
            android:paddingRight="@dimen/vod_player_logo_image_PR"
            android:paddingTop="@dimen/vod_player_logo_image_PT" />

        <LinearLayout
            android:id="@+id/BufferLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/vod_player_bufferlayout_H"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Large"
                android:layout_width="@dimen/vod_player_progressbar_W"
                android:layout_height="@dimen/vod_player_progressbar_H"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/indetermin_drawable" />

            <TextView
                android:id="@+id/BufferText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/vod_player_buffertext_marginleft"
                android:text="@string/loading"
                android:textColor="#ffffffff"
                android:textSize="@dimen/vod_player_buffertext_textsize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PanelLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/player_panel_bg"
            android:foreground="@color/player_panel_fg"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/TitleLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/QualityText"
                    android:layout_width="@dimen/vod_player_qualitytext_W"
                    android:layout_height="@dimen/vod_player_qualitytext_H"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/vod_player_qualitytext_marginleft"
                    android:background="@drawable/rounded_edittext"
                    android:ellipsize="marquee"
                    android:gravity="center_horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingTop="@dimen/vod_player_qualitytext_PT"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/vod_player_qualitytext_textsize" />

                <TextView
                    android:id="@+id/TitleText"
                    android:layout_width="@dimen/vod_player_titletext_W"
                    android:layout_height="@dimen/vod_player_titletext_H"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/vod_player_titletext_marginleft"
                    android:gravity="left"
                    android:singleLine="true" 
					android:ellipsize="middle" 
					android:marqueeRepeatLimit="1" 
					android:focusable="true" 
					android:focusableInTouchMode="true" 
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/vod_player_titletext_textsize" />

                <TextView
                    android:id="@+id/TimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/vod_player_timetext_H"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/vod_player_timetext_marginright"
                    android:gravity="right"
                    android:paddingRight="@dimen/vod_player_timetext_PR"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/vod_player_timetext_textsize" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/TitleLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/vod_player_titlelayout_H"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vod_player_titlelayout_PL"
                android:paddingRight="@dimen/vod_player_titlelayout_PR">

                <ImageView
                    android:id="@+id/PlayPauseImage"
                    android:layout_width="@dimen/vod_player_playpauseimage_W"
                    android:layout_height="@dimen/vod_player_playpauseimage_H"
                    android:layout_marginLeft="@dimen/vod_player_playpauseimage_marginleft"
                    android:src="@drawable/vod_player_pause" />

                <ImageView
                    android:id="@+id/FBImage"
                    android:layout_width="@dimen/vod_player_fbimage_W"
                    android:layout_height="@dimen/vod_player_fbimage_H"
                    android:layout_marginLeft="@dimen/vod_player_fbimage_marginleft"
                    android:src="@drawable/vod_player_fb" />

                <SeekBar
                    android:id="@+id/TimeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:max="100"
                    android:paddingLeft="@dimen/vod_player_timeseekbar_PL"
                    android:paddingRight="@dimen/vod_player_timeseekbar_PR"
                    android:progressDrawable="@drawable/vod_player_time_prog"
                    android:thumb="@drawable/vod_player_time_thumb" />

                <ImageView
                    android:id="@+id/FFImage"
                    android:layout_width="@dimen/vod_player_ffimage_W"
                    android:layout_height="@dimen/vod_player_ffimage_H"
                    android:layout_marginRight="@dimen/vod_player_ffimage_marginright"
                    android:src="@drawable/vod_player_ff" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>