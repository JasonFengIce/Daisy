<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/channel_item"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:textSize="@dimen/tv_guide_channel_text_size"
        android:background="@drawable/selector_channel_item"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="@dimen/tv_guide_channel_item_width"
        android:layout_height="@dimen/tv_guide_channel_item_height">
    </TextView>
</FrameLayout>