<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dip"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="40dip"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mobile_or_sn_txt"
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号:"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp" />

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="400dip"
            android:layout_height="80dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dip"
            android:background="@drawable/person_btn_selector"
            android:gravity="center"
            android:text=" 退出登录"
            android:textColor="#FFF8F8FF"
            android:textSize="35.0sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mobile_or_sn_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/exit_btn"
            android:layout_toRightOf="@id/mobile_or_sn_txt"
            android:gravity="center_vertical"
            android:text="15140393715"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sn_txt"
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="SN号:"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/sn_txt_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="15140393715"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp"
            android:visibility="visible" />
        
         <TextView
            android:id="@+id/warn_info_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="您的账户关联到当前账户，设备损坏或更换时账户余额及权限将清零"
            android:textColor="#fe8109"
            android:textSize="30sp"
            android:visibility="gone"
            android:layout_marginLeft="30dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="余额:"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/remain_money_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="50元"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/privilege_txt"
            android:layout_marginTop="30dip"
            android:layout_width="150dip"
            android:layout_height="80dip"
            android:text="特权:"
            android:textColor="#FFF8F8FF"
            android:textSize="35sp" >
        </TextView>

        <ListView
            android:id="@+id/privilegelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarTrackVertical="@drawable/listview_scroll_bg"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:scrollbarThumbVertical="@drawable/listview_thumb_bg"
            android:scrollbars="vertical"
            android:scrollbarSize="30dip"
            android:scrollbarStyle="outsideInset"
            >
        </ListView>
        <TextView 
            android:id="@+id/no_privilegelist_txt"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="没有特权，尚没有订购"
            android:textColor="#FFF8F8FF"
            android:textSize="40sp"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>