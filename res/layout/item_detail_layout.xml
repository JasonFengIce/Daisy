<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/detail_left_container"
        android:layout_width="@dimen/item_detail_detail_left_container_width"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="@dimen/item_detail_vod_watermark_width"
            android:layout_height="@dimen/item_detail_vod_watermark_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/vod_watermark" />
        <TextView
            android:id="@+id/detail_title"
            android:layout_width="@dimen/item_detail_detail_title_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_detail_detail_title_marginleft"
            android:layout_marginTop="@dimen/item_detail_detail_title_margintop"
            android:textColor="#FFBBBBBB"
            android:textSize="@dimen/item_detail_detail_title_textSize"
            android:ellipsize="end"
            android:maxLines="2"/>
        
        <tv.ismar.daisy.views.DetailAttributeContainer
            android:layout_width="@dimen/item_detail_attribute_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_title"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_detail_attribute_left"
            android:textSize="@dimen/item_detail_introlabel_textsize"
            android:layout_marginTop="@dimen/item_detail_attribute_top"
            android:orientation="vertical"
            android:id="@+id/detail_attribute_container"
            >

            
        </tv.ismar.daisy.views.DetailAttributeContainer>

        <TextView
            android:id="@+id/detail_intro"
            android:layout_width="@dimen/item_detail_intro_width"
            android:layout_height="@dimen/item_detail_intro_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/item_detail_intro_bottom"
            android:layout_marginLeft="@dimen/item_detail_intro_marginleft"
            android:background="@drawable/detail_intro_bg"
            android:lineSpacingExtra="@dimen/item_detail_intro_lineSpacingExtra"
            android:maxLines="4"
            android:ellipsize="end"
            android:paddingLeft="@dimen/item_detail_intro_paddingleft"
            android:paddingRight="@dimen/item_detail_intro_paddingright"
            android:paddingTop="@dimen/item_detail_intro_paddingtop"
            android:textColor="#FFBBBBBB"
            android:textSize="@dimen/item_detail_intro_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/detail_intro"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_detail_introlabel_marginleft"
            android:text="@string/introduction"
            android:textColor="#FF999999"
            android:textSize="@dimen/item_detail_introlabel_textsize" />

        <RelativeLayout
            android:layout_width="@dimen/item_detail_previewpanel_width"
            android:layout_height="@dimen/item_detail_previewpanel_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/item_detail_previewpanel_marginright"
            android:layout_marginTop="@dimen/item_detail_previewpanel_margintop" >

            <tv.ismar.daisy.views.AsyncImageView
                android:id="@+id/detail_preview_img"
                android:layout_width="@dimen/item_detail_previewimgview_width"
                android:layout_height="@dimen/item_detail_previewimgview_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/item_detail_previewimgview_margintop"
                android:layout_marginRight="@dimen/item_detail_previewimgview_marginright"
                android:padding="@dimen/item_detail_previewimgview_padding"
                android:background="@drawable/preview_img_bg"/>
            <ImageView
                android:id="@+id/detail_quality_label"
                android:layout_width="@dimen/item_detail_detailquality_width"
                android:layout_height="@dimen/item_detail_detailquality_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"               
                android:layout_marginTop="@dimen/item_detail_detailquality_margintop"
                android:layout_marginRight="@dimen/item_detail_detailquality_marginright"/>

            <Button
                android:id="@+id/btn_left"
                android:layout_width="@dimen/item_detail_btn_left_width"
                android:layout_height="@dimen/item_detail_btn_left_height"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/detail_preview_img"
                android:textSize="@dimen/item_detail_btn_left_textsize"
                android:textColor="#FFBBBBBB"
                android:text="@string/play"
                android:gravity="center"
                android:background="@drawable/button_left"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_right"
                android:layout_width="@dimen/item_detail_btn_right_width"
                android:layout_height="@dimen/item_detail_btn_right_height"
                android:layout_marginRight="@dimen/item_detail_detailquality_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/detail_preview_img"
                android:textSize="@dimen/item_detail_btn_right_textsize"
                android:textColor="#FFBBBBBB"
                android:gravity="center"
                android:text="@string/vod_itemepisode"
                android:background="@drawable/button_right"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_fill"
                android:layout_width="@dimen/item_detail_btn_fill_width"
                android:layout_height="@dimen/item_detail_btn_fill_height"
                android:layout_below="@id/detail_preview_img"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/item_detail_detailquality_height"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/play"
                android:textSize="@dimen/item_detail_btn_fill_textsize"
                android:textColor="#FFBBBBBB"
                android:background="@drawable/button_fill"
               />

            <Button
                android:id="@+id/btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_detail_btn_favorite_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/favorite_btn"
                android:textColor="#FFBBBBBB"
                android:textSize="@dimen/item_detail_btn_favorite_textsize"
                android:paddingLeft="@dimen/item_detail_btn_favorite_paddingleft"
                android:paddingRight="@dimen/item_detail_btn_favorite_paddingright"
                android:paddingTop="@dimen/item_detail_btn_favorite_paddingtop"
                android:gravity="left|top"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_right_container"
        android:layout_width="@dimen/item_detail_right_container_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_detail_related_video_label_left"
            android:layout_marginTop="@dimen/item_detail_related_video_label_top"
            android:text="@string/related_video"
            android:textColor="#FFBBBBBB"
            android:textSize="@dimen/item_detail_related_video_label_textsize" />

        <ImageView
            android:layout_width="@dimen/item_detail_related_divider_width"
            android:layout_height="@dimen/item_detail_related_divider_height"
            android:layout_marginTop="@dimen/item_detail_related_divider_margintop"
            android:layout_marginBottom="@dimen/item_detail_related_divider_marginbottom"
            android:layout_marginLeft="@dimen/item_detail_related_divider_marginleft"
            android:src="@drawable/related_divider" />

        <LinearLayout
            android:id="@+id/related_video_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_detail_related_video_container_height"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/more_content"
            android:layout_width="@dimen/item_detail_more_content_width"
            android:layout_height="@dimen/item_detail_more_content_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/more_btn"
            android:textColor="#FFBBBBBB"
            android:textSize="@dimen/item_detail_more_content_textsize" 
            />
    </LinearLayout>

</LinearLayout>