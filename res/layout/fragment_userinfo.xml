<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/device_number"
        android:layout_marginTop="@dimen/usercenter_info_device_number_margin_top"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/usercenter_info_layout_margin_left"
        android:textSize="@dimen/person_login_phone_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginLeft="@dimen/usercenter_info_layout_margin_left"
        android:layout_marginTop="@dimen/usercenter_info_device_number_margin_top"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:text="您的账户关联到当前设备,设备损坏或更换时账户余额及特权将清零"
            android:textColor="#fe8109"
            android:gravity="center_vertical"
            android:textSize="@dimen/person_login_phone_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/person_login_phone_text_size"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:text="@string/association"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:id="@+id/association"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/usercenter_info_layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/person_login_phone_text_W"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="余额:"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_login_phone_text_size"/>

        <TextView
            android:id="@+id/remain_money_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_login_phone_text_size"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/usercenter_info_layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        >

        <TextView
            android:id="@+id/privilege_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/privilege_item_layout_H"
            android:gravity="center_vertical"
            android:text="特权:"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_login_phone_text_size">
        </TextView>

        <ListView
            android:layout_toRightOf="@id/privilege_txt"
            android:id="@+id/privilegelist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:scrollbars="vertical"
            android:scrollbarSize="@dimen/person_info_privilegelist_scrollbarSize"
            android:scrollbarStyle="outsideInset"
            android:scrollbarFadeDuration="0"
            android:fadeScrollbars="false"
            android:layout_marginRight="@dimen/person_login_phone_view_ML">
        </ListView>

        <TextView
            android:visibility="gone"
            android:id="@+id/no_privilegelist_txt"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="当前没有购买记录"
            android:textColor="#FFF8F8FF"
            android:textSize="@dimen/person_info_no_privilegelist_txt_size"
            android:gravity="center"
            />
    </RelativeLayout>

</LinearLayout>