<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/sport_linearLayout_margin_t"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sport_linearLayout_margin_l"
    android:paddingRight="@dimen/sport_linearLayout_margin_l" >

    <RelativeLayout
        android:id="@+id/section_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sport_section_one_h"
        android:layout_marginBottom="@dimen/sport_section_one_margin"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/sport_lefttop"
            android:layout_width="@dimen/sport_lefttop_w"
            android:layout_height="@dimen/sport_lefttop_h"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sport_lefttop_margin"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_card1"
                android:layout_width="@dimen/sport_card_w"
                android:layout_height="@dimen/sport_card_h"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focuspaddingtop="0.8"
                labelimage:focustextpaddingtop="0.91"
                labelimage:focustextsize="@dimen/sport_card_focustextsize"
                labelimage:frontcolor="#b3000000"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_card2"
                android:layout_width="@dimen/sport_card_w"
                android:layout_height="@dimen/sport_card_h"
                android:layout_below="@+id/sport_card1"
                android:layout_marginTop="@dimen/sports_live_mt"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focuspaddingtop="0.8"
                labelimage:focustextpaddingtop="0.91"
                labelimage:focustextsize="@dimen/sport_card_focustextsize"
                labelimage:frontcolor="#b3000000"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_card3"
                android:layout_width="@dimen/sport_card_w"
                android:layout_height="@dimen/sport_card_h"
                android:layout_below="@+id/sport_card2"
                android:layout_marginTop="@dimen/sports_live_mt"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focuspaddingtop="0.8"
                labelimage:focustextpaddingtop="0.91"
                labelimage:focustextsize="@dimen/sport_card_focustextsize"
                labelimage:frontcolor="#b3000000"
                labelimage:needzoom="true" />
        </RelativeLayout>

        <tv.ismar.daisy.views.LabelImageView
            xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
            android:id="@+id/sportspost"
            android:layout_width="@dimen/sportspost_w"
            android:layout_height="@dimen/sportspost_h"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sportspost_mr"
            android:layout_marginTop="@dimen/sportspost_mt"
            android:layout_toRightOf="@id/sport_lefttop"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_preview_bg"
            labelimage:focusbackground="@color/shawdow"
            labelimage:focuspaddingtop="0.89"
            labelimage:focustextpaddingtop="0.97"
            labelimage:focustextsize="@dimen/toppage_fragment_poster_title_textsize"
            labelimage:needzoom="true" />

        <RelativeLayout
            android:id="@+id/sec_one_list_2"
            android:layout_width="@dimen/sec_one_list_2_w"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sec_one_list_2_ml"
            android:layout_toRightOf="@id/sportspost"
            android:clipChildren="false"
            android:clipToPadding="false" >

            <ImageView
                android:id="@+id/sec_one_list_1_arrowup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sec_one_list_1_arrowup_h"
                android:background="#b3303030"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/arrow_up" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sports_live1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sports_live_h"
                android:layout_below="@id/sec_one_list_1_arrowup"
                android:layout_marginTop="@dimen/sports_live_mt"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sports_live2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sports_live_h"
                android:layout_below="@id/sports_live1"
                android:layout_marginTop="@dimen/sports_live_mt"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sports_live3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sports_live_h"
                android:layout_below="@id/sports_live2"
                android:layout_marginTop="@dimen/sports_live_mt"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:needzoom="true" />

            <ImageView
                android:id="@+id/sec_one_list_1_arrowdown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sec_one_list_1_arrowup_h"
                android:layout_below="@id/sports_live3"
                android:layout_marginTop="@dimen/sports_live_mt"
                android:background="#b3303030"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/arrow_down" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sport_linearLayout2_h"
        android:layout_marginBottom="@dimen/sport_linearLayout2_mb"
        android:layout_marginTop="@dimen/sport_linearLayout2_mt"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sport_channel1"
            android:layout_width="@dimen/sport_channel_w"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel1_image"
                android:layout_width="@dimen/sport_channel_image_w"
                android:layout_height="@dimen/sport_channel_image_h"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="18sp" />

            <TextView
                android:id="@+id/sport_channel1_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sport_channel_subtitle_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sport_channel_subtitle_textSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sport_channel2"
            android:layout_width="@dimen/sport_channel_w"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sport_channel_ml"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel2_image"
                android:layout_width="@dimen/sport_channel_image_w"
                android:layout_height="@dimen/sport_channel_image_h"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="18sp" />

            <TextView
                android:id="@+id/sport_channel2_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sport_channel_subtitle_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sport_channel_subtitle_textSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sport_channel3"
            android:layout_width="@dimen/sport_channel_w"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sport_channel_ml"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel3_image"
                android:layout_width="@dimen/sport_channel_image_w"
                android:layout_height="@dimen/sport_channel_image_h"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="@dimen/sport_channel_image_focustextsize" />

            <TextView
                android:id="@+id/sport_channel3_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sport_channel_subtitle_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sport_channel_subtitle_textSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sport_channel4"
            android:layout_width="@dimen/sport_channel_w"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sport_channel_ml"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel4_image"
                android:layout_width="@dimen/sport_channel_image_w"
                android:layout_height="@dimen/sport_channel_image_h"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="@dimen/sport_channel_image_focustextsize" />

            <TextView
                android:id="@+id/sport_channel4_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sport_channel_subtitle_mt"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sport_channel_subtitle_textSize" />
        </LinearLayout>

        <include
            android:layout_width="@dimen/sport_channel_w"
            android:layout_height="@dimen/sport_channel_image_h"
            android:layout_marginLeft="@dimen/sport_channel_ml_1"
            layout="@layout/toppagelistmorebutton" />
    </LinearLayout>

</LinearLayout>