<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="31dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="70dp"
    android:paddingRight="70dp" >

    <RelativeLayout
        android:id="@+id/section_one"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="5dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/sport_lefttop"
            android:layout_width="297dp"
            android:layout_height="497dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_card1"
                android:layout_width="297dp"
                android:layout_height="165dp"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focuspaddingtop="0.8"
                labelimage:focustextpaddingtop="0.91"
                labelimage:focustextsize="18sp"
                labelimage:frontcolor="#b3000000"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_card2"
                android:layout_width="297dp"
                android:layout_height="165dp"
                android:layout_below="@+id/sport_card1"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focuspaddingtop="0.8"
                labelimage:focustextpaddingtop="0.91"
                labelimage:focustextsize="18sp"
                labelimage:frontcolor="#b3000000"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_card3"
                android:layout_width="297dp"
                android:layout_height="165dp"
                android:layout_below="@+id/sport_card2"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focuspaddingtop="0.8"
                labelimage:focustextpaddingtop="0.91"
                labelimage:focustextsize="18sp"
                labelimage:frontcolor="#b3000000"
                labelimage:needzoom="true" />
        </RelativeLayout>

        <tv.ismar.daisy.views.LabelImageView
            xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
            android:id="@+id/sportspost"
            android:layout_width="1184dp"
            android:layout_height="497dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/sport_lefttop"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/list_item_preview_bg"
            labelimage:focustextpaddingtop="0.97"
            labelimage:focuspaddingtop="0.89"
            labelimage:focusbackground="@color/shawdow"
            labelimage:focustextsize="@dimen/toppage_fragment_poster_title_textsize"
            labelimage:needzoom="true" />

        <RelativeLayout
            android:id="@+id/sec_one_list_2"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/sportspost"
            android:layout_centerVertical="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            >

            <ImageView
                android:id="@+id/sec_one_list_1_arrowup"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#b2000000"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/arrow_up" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sports_live1"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="1dp"
                android:layout_below="@id/sec_one_list_1_arrowup"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sports_live2"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_below="@id/sports_live1"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:needzoom="true" />

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sports_live3"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_below="@id/sports_live2"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_item_preview_bg"
                labelimage:needzoom="true" />

            <ImageView
                android:id="@+id/sec_one_list_1_arrowdown"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:layout_below="@id/sports_live3"
                android:background="#b2000000"
                android:focusable="true"
                android:scaleType="center"
                android:src="@drawable/arrow_down" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_marginBottom="88dp"
        android:layout_marginTop="1dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sport_channel1"
            android:layout_width="332dp"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel1_image"
                android:layout_width="332dp"
                android:layout_height="189dp"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="18sp" />

            <TextView
                android:id="@+id/sport_channel1_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sport_channel2"
            android:layout_width="332dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel2_image"
                android:layout_width="332dp"
                android:layout_height="189dp"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="18sp" />

            <TextView
                android:id="@+id/sport_channel2_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sport_channel3"
            android:layout_width="332dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel3_image"
                android:layout_width="332dp"
                android:layout_height="189dp"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="18sp" />

            <TextView
                android:id="@+id/sport_channel3_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sport_channel4"
            android:layout_width="332dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <tv.ismar.daisy.views.LabelImageView
                xmlns:labelimage="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/sport_channel4_image"
                android:layout_width="332dp"
                android:layout_height="189dp"
                android:focusable="true"
                android:src="@drawable/list_item_preview_bg"
                labelimage:focusbackground="#b3303030"
                labelimage:focustextsize="18sp" />

            <TextView
                android:id="@+id/sport_channel4_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <include
            android:layout_width="332dp"
            android:layout_height="189dp"
            android:layout_marginLeft="29dp"
            layout="@layout/toppagelistmorebutton" />
    </LinearLayout>

</LinearLayout>