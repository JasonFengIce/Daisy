<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:sakura="http://schemas.android.com/apk/res/tv.ismar.daisy"
              android:id="@+id/large_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/background"
        >

    <tv.ismar.daisy.ui.widget.LaunchHeaderLayout
            android:id="@+id/top_column_layout"
            android:layout_width="match_parent"
            android:layout_height="112dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/tv_guide_top_section_padding"
            android:paddingRight="@dimen/tv_guide_top_section_padding"
            >
    </tv.ismar.daisy.ui.widget.LaunchHeaderLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:background="@drawable/filter_divider"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/tv_guide_top_section_padding"
            android:paddingRight="@dimen/tv_guide_top_section_padding"/>

    <TextView
            android:id="@+id/detail_title"
            android:layout_width="480dip"
            android:layout_height="41dip"
            android:layout_marginLeft="73dip"
            android:layout_marginTop="30dip"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="美国队长"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="326dip"
            android:orientation="horizontal"
            android:layout_marginTop="26dip">

        <tv.ismar.daisy.views.AsyncImageView
                android:layout_marginLeft="73dip"
                android:id="@+id/detail_preview_img"
                android:layout_width="480dip"
                android:layout_height="270dip"
                android:scaleType="fitXY"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <tv.ismar.daisy.views.DetailAttributeContainer
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_introlabel_textsize"
                    android:orientation="vertical"
                    android:id="@+id/detail_attribute_container"
                    >
            </tv.ismar.daisy.views.DetailAttributeContainer>

            <LinearLayout
                    android:layout_height="72dip"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="168dip"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="57dip"
                    android:layout_marginRight="73dip"
                    android:visibility="visible">

                <Button
                        android:singleLine="true"
                        android:id="@+id/btn_left"
                        android:layout_width="374dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/variety_btn_bg_selector"
                        android:gravity="center"
                        android:visibility="visible"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/item_detail_text_size"
/>

                <Button
                        android:gravity="center"
                        android:id="@+id/middle_btn"
                        android:layout_width="214dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="71dip"
                        android:background="@drawable/pdetail_btn_bg_selector"
                        android:paddingTop="@dimen/item_detail_btn_favorite_paddingtop"
                        android:visibility="visible"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/item_detail_text_size"/>

                <Button
                        android:gravity="center"
                        android:id="@+id/btn_right"
                        android:layout_width="214dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="71dip"
                        android:background="@drawable/pdetail_btn_bg_selector"
                        android:visibility="visible"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/item_detail_text_size"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

        <TextView
                android:lineSpacingExtra="28dip"
                android:layout_marginLeft="73dip"
                android:id="@+id/detail_intro"
                android:layout_width="1774dip"
                android:layout_height="95dip"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/item_detail_introlabel_textsize"/>
    <TextView
            android:layout_marginLeft="73dip"
            android:layout_marginTop="58dip"
            android:layout_width="144dip"
            android:layout_height="36dip"
            android:gravity="center"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:text="同类推荐"/>

    <LinearLayout
            android:layout_marginTop="35dip"
            android:orientation="horizontal"
            android:layout_marginRight="73dip"
            android:layout_marginLeft="73dip"
            android:layout_width="match_parent"
            android:layout_height="237dip">

        <LinearLayout
                android:id="@+id/related_video_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
        </LinearLayout>

        <LinearLayout
                android:focusable="true"
                android:layout_marginLeft="85dip"
                android:id="@+id/more_content"
                android:clickable="true"
                android:layout_width="123dip"
                android:layout_height="189dip"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/more_btn_sector">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    android:text="更"
                    android:gravity="center"
                    />

            <TextView
                    android:layout_marginTop="20dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    android:text="多"
                    />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>