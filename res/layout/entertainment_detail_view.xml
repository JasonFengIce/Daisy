<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:sakura="http://schemas.android.com/apk/res/tv.ismar.daisy"
              android:id="@+id/large_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/background"
        >

    <tv.ismar.daisy.ui.widget.TopView
            android:id="@+id/top_column_layout"
            android:layout_width="match_parent"
            android:layout_height="112dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/tv_guide_top_section_padding"
            android:paddingRight="@dimen/tv_guide_top_section_padding"
            >
    </tv.ismar.daisy.ui.widget.TopView>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:background="@drawable/filter_divider"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/tv_guide_top_section_padding"
            android:paddingRight="@dimen/tv_guide_top_section_padding"/>

    <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dip"
            android:layout_marginTop="23dip"
            android:textColor="#FFBBBBBB"
            android:textSize="@dimen/item_detail_detail_title_textSize"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="美国队长"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dip"
            android:orientation="horizontal"
            android:paddingTop="20dip">

        <tv.ismar.daisy.views.AsyncImageView
                android:layout_marginLeft="73dip"
                android:id="@+id/detail_preview_img"
                android:layout_width="480dip"
                android:layout_height="270dip"
                android:padding="@dimen/item_detail_previewimgview_padding"
                android:scaleType="fitXY"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <tv.ismar.daisy.views.DetailAttributeContainer
                    android:layout_marginLeft="73dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_introlabel_textsize"
                    android:orientation="vertical"
                    android:id="@+id/detail_attribute_container"
                    >
            </tv.ismar.daisy.views.DetailAttributeContainer>

            <LinearLayout
                    android:layout_height="@dimen/item_detail_btn_left_height"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="168dip"
                    android:orientation="horizontal"
                    android:layout_marginTop="110dip"
                    android:layout_marginRight="73dip"
                    android:visibility="visible">

                <Button
                        android:id="@+id/btn_left"
                        android:layout_width="280dip"
                        android:layout_height="@dimen/item_detail_btn_left_height"
                        android:background="@drawable/variety_btn_bg_selector"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="@dimen/item_detail_btn_favorite_paddingtop"
                        android:visibility="visible"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/item_detail_text_size"
                        android:drawableLeft="@drawable/daisy_left_play"/>

                <Button
                        android:id="@+id/middle_btn"
                        android:layout_width="160dip"
                        android:layout_height="@dimen/item_detail_btn_left_height"
                        android:layout_marginLeft="71dip"
                        android:background="@drawable/variety_btn_bg_selector"
                        android:paddingTop="@dimen/item_detail_btn_favorite_paddingtop"
                        android:visibility="visible"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/item_detail_text_size"/>

                <Button
                        android:id="@+id/btn_right"
                        android:layout_width="170dip"
                        android:layout_height="@dimen/item_detail_btn_left_height"
                        android:layout_marginLeft="71dip"
                        android:paddingTop="@dimen/item_detail_btn_favorite_paddingtop"
                        android:paddingLeft="1dip"
                        android:paddingRight="1dip"
                        android:background="@drawable/variety_btn_bg_selector"
                        android:visibility="visible"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/item_detail_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
                android:layout_marginLeft="73dip"
                android:layout_width="wrap_content"
                android:layout_height="80dip"
                android:text="简介:"
                android:textColor="#FFBBBBBB"
                android:textSize="@dimen/item_detail_introlabel_textsize"/>

        <TextView
                android:lineSpacingExtra="7dip"
                android:layout_marginLeft="15dip"
                android:id="@+id/detail_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="4"
                android:ellipsize="end"
                android:textColor="#FFBBBBBB"
                android:textSize="@dimen/item_detail_introlabel_textsize"/>

    </LinearLayout>

    <TextView
            android:layout_marginLeft="73dip"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:textSize="36sp"
            android:textColor="#FFBBBBBB"
            android:text="同类推荐"/>

    <LinearLayout
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:layout_marginRight="73dip"
            android:layout_marginLeft="73dip"
            android:layout_width="match_parent"
            android:layout_height="240dip">

        <LinearLayout
                android:id="@+id/related_video_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
        </LinearLayout>

        <LinearLayout
                android:focusable="true"
                android:layout_marginTop="6dip"
                android:layout_marginLeft="85dip"
                android:id="@+id/more_content"
                android:clickable="true"
                android:layout_width="130dip"
                android:layout_height="189dip"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/more_btn_sector">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_detail_title_textSize"
                    android:textColor="#FFBBBBBB"
                    android:text="更"
                    android:gravity="center"
                    />

            <TextView
                    android:layout_marginTop="20dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_detail_title_textSize"
                    android:textColor="#FFBBBBBB"
                    android:text="多"
                    />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>