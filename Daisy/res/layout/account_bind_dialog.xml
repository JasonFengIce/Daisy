<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popwindow_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/account_bind_warn_msg"
        android:layout_width="691dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFFFF"
        android:lineSpacingExtra="32dp"
        android:layout_marginTop="49dip"
        android:textSize="@dimen/person_login_phone_text_size" />
        <TextView
        android:layout_width="691dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFFFF"
        android:lineSpacingExtra="32dp"
        android:text="您已成功登录视云影院！"
        android:textSize="@dimen/person_login_phone_text_size" />
    <LinearLayout
        android:id="@+id/account_bind_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/account_bind_ok_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/person_btn_selector"
            android:text="确   定"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/person_login_phone_edit_text_size" />

        <Button
            android:id="@+id/account_bind_cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/person_btn_selector"
            android:layout_marginLeft="30dp"
            android:text="取   消"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/person_login_phone_edit_text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/account_bind_ok1_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/selector_daisy_exit_button"
        android:text="确   定"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/person_login_phone_edit_text_size" />

</LinearLayout>
</FrameLayout>