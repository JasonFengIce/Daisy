<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:id="@+id/alert_dialog_root">
    <RelativeLayout
	    android:layout_width="@dimen/dialog_layout_W"
	    android:layout_height="@dimen/dialog_layout_H"
	    android:layout_gravity="center"
	    android:background="@drawable/dialog">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/alert_info_text"
	        android:textSize="@dimen/dialog_alert_info_text_textsize"
	        android:textColor="#FFFFFFFF"
	        android:layout_marginTop="@dimen/dialog_alert_info_text_marginT"
	        android:layout_marginBottom="@dimen/dialog_alert_info_text_marginB"
	        android:layout_marginLeft="@dimen/dialog_alert_info_text_marginL"
	        android:layout_marginRight="@dimen/dialog_alert_info_text_marginR"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"/>
	    <Button
	        android:layout_width="@dimen/dialog_positive_button_W"
	        android:layout_height="@dimen/dialog_positive_button_H"
	        android:id="@+id/positive_button"
	        android:paddingTop="@dimen/dialog_positive_button_PT"
	        android:gravity="center"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="@dimen/dialog_positive_button_marginB"
	        android:layout_marginLeft="@dimen/dialog_positive_button_marginL"
	        android:textSize="@dimen/dialog_positive_button_textsize"
	        android:textColor="#FFFFFFFF"
	        android:text="@string/vod_ok"
	        android:background="@drawable/dialog_btn_positive_drawable"/>
	    <Button
	        android:layout_width="@dimen/dialog_negative_btn_W"
	        android:layout_height="@dimen/dialog_negative_btn_H"
	        android:id="@+id/negative_btn"
	        android:gravity="center"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="@dimen/dialog_negative_btn_marginB"
	        android:layout_marginRight="@dimen/dialog_negative_btn_marginR"
	        android:textSize="@dimen/dialog_negative_btn_textsize"
	        android:textColor="#FFFFFFFF"
	        android:text="@string/dialog_setting"
	        android:background="@drawable/dialog_btn_netagive_drawable"/>
	</RelativeLayout>
</LinearLayout>