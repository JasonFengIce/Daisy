<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        >

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/child_fragment_leftlayout_margin_left"
            android:layout_marginTop="@dimen/child_fragment_toplayout_margin_top"
            android:orientation="vertical"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/child_fragment_center_layout_margin_left"
            android:layout_marginTop="@dimen/child_fragment_toplayout_margin_top"
            android:layout_toRightOf="@id/left_layout"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/indicator_layout"
                android:layout_width="@dimen/child_fragment_center_layout_width"
                android:layout_height="@dimen/child_fragment_center_layout_height"
                android:clipChildren="false"
                android:clipToPadding="false"
                >

                <tv.ismar.daisy.views.LabelImageView
                    android:id="@+id/image_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    >
                </tv.ismar.daisy.views.LabelImageView>

                <LinearLayout
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <tv.ismar.daisy.ui.widget.child.ChildThumbImageView
                        android:id="@+id/indicator_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/child_fragment_indicator_height"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="fitXY"
                        />

                    <tv.ismar.daisy.ui.widget.child.ChildThumbImageView
                        android:id="@+id/indicator_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/child_fragment_indicator_height"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="fitXY"
                        />

                    <tv.ismar.daisy.ui.widget.child.ChildThumbImageView
                        android:id="@+id/indicator_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/child_fragment_indicator_height"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/indicator_title"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/child_loop_indicator_text_height"
                        android:layout_weight="3"
                        android:alpha="0.7"
                        android:background="#303030"
                        android:gravity="center"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/h5_text_size"
                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_fragment_center_layout_item_margin_top"
                android:orientation="horizontal"
                >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/child_fragment_center_layout_margin_left"
            android:layout_marginTop="@dimen/child_fragment_toplayout_margin_top"
            android:layout_toRightOf="@id/center_layout"
            android:orientation="vertical"
            >
        </LinearLayout>

        <ImageButton
            android:id="@+id/child_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/child_fragment_center_layout_margin_left"
            android:layout_toRightOf="@id/center_layout"
            android:background="@drawable/selector_child_more"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_child_fragment"/>

</FrameLayout>