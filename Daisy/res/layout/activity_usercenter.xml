<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/large_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <tv.ismar.daisy.ui.widget.LaunchHeaderLayout
            android:id="@+id/top_column_layout"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/tv_guide_top_section_padding"
            android:paddingRight="@dimen/tv_guide_top_section_padding"
            >
    </tv.ismar.daisy.ui.widget.LaunchHeaderLayout>

    <ImageView
            android:src="@drawable/horizontal_divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            >


        <LinearLayout
                android:id="@+id/user_center_indicator_layout"
                android:orientation="vertical"
                android:layout_width="@dimen/usercenter_fragment_indicator_layout_width"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                >
        </LinearLayout>

        <ImageView
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/vertical_divider_line"
                android:src="@drawable/_000000000"
                android:layout_width="11dp"
                android:layout_height="match_parent"/>

        <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@drawable/vertical_divider_line"
                />


        <FrameLayout
                android:id="@+id/user_center_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </FrameLayout>


    </LinearLayout>

</LinearLayout>