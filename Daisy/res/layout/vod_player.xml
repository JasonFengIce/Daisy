<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/RootRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true"
    >
    <tv.ismar.daisy.views.IsmatvVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible"
        >
    </tv.ismar.daisy.views.IsmatvVideoView>

    <FrameLayout
        android:id="@+id/fl_videoview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" >
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:foreground="@android:color/transparent" >
        <RelativeLayout
            android:id="@+id/top_panelayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/play_top_height"
            android:layout_alignParentTop="true"
            android:background="#202020"
            android:alpha="0.8"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/player_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_back_top"
                android:layout_marginLeft="@dimen/player_back_left"
                android:src="@drawable/list_arrow_back_selector"
                />
            <tv.ismar.daisy.views.MarqueeView
                xmlns:app="http://schemas.android.com/apk/res/tv.ismar.daisy"
                android:id="@+id/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_title_top"
                android:layout_marginLeft="@dimen/player_title_left"
                app:textsize="22.66sp"
                app:textcolor="#e4e4e4"
                app:speed="20">
            </tv.ismar.daisy.views.MarqueeView>
            <TextView
                android:id="@+id/anthology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/anthology_size"
                android:textColor="#e4e4e4"
                android:layout_marginRight="@dimen/anthology_right"
                android:layout_marginTop="@dimen/anthology_top"
                android:layout_alignParentRight="true"
                android:text="选集"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alpha="0.8"
            android:paddingRight="@dimen/vod_player_logo_image_PR"
            android:paddingTop="@dimen/vod_player_logo_image_PT" />
        <TextView
            android:id="@+id/ad_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alpha="0.8"
            android:paddingRight="@dimen/vod_player_logo_image_PR"
            android:paddingTop="@dimen/vod_player_logo_image_PT"
            android:textSize="25sp"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/BufferLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/vod_player_bufferlayout_H"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Large"
                android:layout_width="@dimen/vod_player_progressbar_W"
                android:layout_height="@dimen/vod_player_progressbar_H"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/indetermin_drawable" />

            <TextView
                android:id="@+id/BufferText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/vod_player_buffertext_marginleft"
                android:layout_marginTop="@dimen/vod_player_buffertext_marginTop"
                android:text="@string/loading"
                android:textColor="#ffffffff"
                android:textSize="@dimen/vod_player_buffertext_textsize" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </RelativeLayout>
        <TextView
                android:id="@+id/progress_time"
                android:layout_width="@dimen/progress_time_text_w"
                android:layout_height="@dimen/progress_time_text_h"
                android:background="@drawable/yoga_seek_bg"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/progress_time_text_size"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/play_progress_text_mb"
                android:visibility="invisible"
                />
        <LinearLayout
            android:id="@+id/PanelLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#202020"
            android:alpha="0.8"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="gone" >
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/TimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/timeText_marginTop"
                android:layout_marginLeft="@dimen/timeText_marginLeft"
                android:textColor="#e4e4e4"
                android:textSize="@dimen/timeText_size"/>
            <SeekBar
                android:id="@+id/TimeSeekBar"
                android:layout_width="@dimen/seekbar_w"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:max="100"
                android:maxHeight="@dimen/seekbar_h"
                android:layout_marginLeft="@dimen/seekbar_ml"
                android:progressDrawable="@drawable/vodplayer_seekbar_style"
                android:layout_marginTop="@dimen/seekbar_h"
                android:secondaryProgress="0"
                android:thumb="@drawable/vod_player_time_yoga"
                android:thumbOffset="0dp" />
            <TextView
                android:id="@+id/endTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/endtime_text_marginTop"
                android:layout_marginLeft="@dimen/endtime_text_marginleft"
                android:textColor="#e4e4e4"
                android:textSize="@dimen/endtime_text_size"/>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/QualityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/anthology_right"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="#e4e4e4"
                android:textSize="@dimen/quality_text_size" />
            <!--<ImageView-->
            <!--android:id="@+id/FBImage"-->
            <!--android:layout_width="@dimen/vod_player_ffimage_W"-->
            <!--android:layout_height="@dimen/vod_player_ffimage_W"-->
            <!--android:layout_marginLeft="@dimen/vod_player_fbimage_marginleft"-->
            <!--android:clickable="true"-->
            <!--android:src="@drawable/vodplayer_controller_fbf" />-->

            <ImageView
                android:id="@+id/PlayPauseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/play_pause_left"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/play" />

            <ImageView
                android:id="@+id/FFImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/play_ff_left"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/vodplayer_ffd" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/gesture_tipview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <FrameLayout
            android:layout_alignParentRight="true"
            android:id="@+id/episode_layout"
            android:layout_marginTop="@dimen/episode_layout_marginTop"
            android:layout_marginBottom="@dimen/episode_layout_marginBottom"
            android:layout_width="@dimen/episode_layout_widht"
            android:layout_height="match_parent"
    />
    <RelativeLayout
            android:id="@+id/bright"
            android:layout_width="@dimen/bright_w"
            android:layout_height="@dimen/bright_h"
            android:layout_centerInParent="true"
            android:background="@drawable/bright"
            android:visibility="gone">

        <ProgressBar
                android:id="@+id/progress_bright"
                android:layout_width="@dimen/bright_progress_w"
                android:layout_height="@dimen/bright_progress_h"
                android:layout_marginLeft="@dimen/bright_progress_ml"
                android:layout_marginTop="@dimen/bright_progress_mt"
                android:progressDrawable="@drawable/progressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/volumn"
            android:layout_width="@dimen/bright_w"
            android:layout_height="@dimen/bright_h"
            android:layout_centerInParent="true"
            android:background="@drawable/volumn"
            android:visibility="gone">

        <ProgressBar
                android:id="@+id/progress_volumn"
                android:layout_width="@dimen/bright_progress_w"
                android:layout_height="@dimen/bright_progress_h"
                android:layout_marginLeft="@dimen/bright_progress_ml"
                android:layout_marginTop="@dimen/bright_progress_mt"
                android:progressDrawable="@drawable/progressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/play_progress"
            android:layout_width="@dimen/bright_w"
            android:layout_height="@dimen/bright_h"
            android:layout_centerInParent="true"
            android:background="@drawable/moveon"
            android:visibility="gone">

        <TextView
                android:id="@+id/current_play_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/play_progress_text_mt"
                />
        <ProgressBar
                android:id="@+id/progress_play"
                android:layout_width="@dimen/bright_progress_w"
                android:layout_height="@dimen/bright_progress_h"
                android:layout_marginLeft="@dimen/bright_progress_ml"
                android:layout_marginTop="@dimen/bright_progress_mt"
                android:progressDrawable="@drawable/progressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                />

    </RelativeLayout>
</RelativeLayout>