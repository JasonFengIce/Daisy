<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:clickable="true"
              android:background="@drawable/selector_child_item"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/child_fragment_item_image_margin_top"
            android:id="@+id/item_img"
            android:scaleType="fitXY"
            android:layout_width="@dimen/child_fragment_item_image_width"
            android:layout_height="@dimen/child_fragment_item_image_height"
            />

    <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/h3_text_size"
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>