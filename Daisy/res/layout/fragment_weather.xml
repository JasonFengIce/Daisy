<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/weather_guide_text_margin_margin_bottom"
            android:layout_marginLeft="@dimen/weather_layout_margin_left"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/h1_text_size"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <ImageView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/weather_divider_margin_bottom"
            android:layout_toRightOf="@id/title"
            android:id="@+id/divider"
            android:src="@color/white"
            android:layout_width="@dimen/weather_divider_width"
            android:layout_height="@dimen/weather_divider_height"/>

    <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/weather_guide_text_margin_margin_bottom"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/h2_text_size"
            android:layout_toRightOf="@id/divider"
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/weather_guide_text_margin_margin_bottom"
            android:textSize="@dimen/h3_text_size"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@id/sub_title"
            android:id="@+id/weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/weather_guide_text_margin_margin_bottom"
            android:id="@+id/indicator_layout"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </LinearLayout>
</RelativeLayout>