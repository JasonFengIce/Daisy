<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/popup_bg_yellow"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/fetch_net_data_error"
            android:text="@string/fetch_net_data_error"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <Button
                android:layout_marginRight="30dp"
                android:background="@drawable/selector_channel_item"
                android:textSize="28sp"
                android:text="@string/setting_network"
                android:textColor="@android:color/white"
                android:id="@+id/setting_network"
                android:layout_width="250dp"
                android:layout_height="60dp"/>

            <Button
                android:layout_marginLeft="60dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/selector_channel_item"
                android:textSize="28sp"
                android:text="@string/i_know"
                android:textColor="@android:color/white"
                android:id="@+id/i_know"
                android:layout_width="250dp"
                android:layout_height="60dp"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>