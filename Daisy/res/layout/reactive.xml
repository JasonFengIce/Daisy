<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pop_width"
    android:layout_height="@dimen/pop_height"
    android:background="@drawable/popwindow_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pop_first_text_margin_top"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reactive_msg"
            android:layout_width="@dimen/pop_text_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/h3_text_size"
            android:text="正在加载中.........."
             />
        <Button
                android:id="@+id/reactive_btn"
                android:layout_width="@dimen/pop_btn_width"
                android:layout_height="@dimen/pop_btn_height"
                android:background="@drawable/selector_daisy_exit_button"
                android:text="确定"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/pop_btn_mt"
                android:textColor="@android:color/white"
                android:textSize="@dimen/h3_text_size"
                android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pop_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pop_btn_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <Button
            android:layout_width="@dimen/pop_btn_width"
            android:layout_height="@dimen/pop_btn_height"
            android:background="@drawable/selector_daisy_exit_button"
            android:text="重新激活"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h3_text_size" />

        <Button
            android:layout_width="@dimen/pop_btn_width"
            android:layout_height="@dimen/pop_btn_height"
            android:layout_marginLeft="@dimen/pop_btn_margin_lr"
            android:background="@drawable/selector_daisy_exit_button"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h3_text_size" />
    </LinearLayout>

</RelativeLayout>