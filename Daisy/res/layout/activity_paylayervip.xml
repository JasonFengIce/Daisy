<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newvip_bg">

    <ImageView
        android:id="@+id/tmp"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:src="@android:color/transparent"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="@dimen/paylayervip_layout_width"
            android:layout_height="@dimen/paylayervip_layout_height"
            android:layout_centerInParent="true"
            android:background="@android:color/black"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/paylayvip_mariginleft"
                android:layout_marginTop="@dimen/paylayervip_title_mriginTop"
                android:text="@string/vip_des"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/paylayvip_mariginleft"
                android:layout_marginTop="@dimen/paylayervip_des_margintop"
                android:text="@string/vip_des_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_24sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paylayervip_title_mriginTop"
                >

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="@dimen/paylayervip_width"
                    android:layout_height="@dimen/paylayervip_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_paylayervip_leftarrow"
                    />

                <cn.ismartv.tvhorizontalscrollview.TvHorizontalScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="@dimen/paylayervip_scrollview_width"
                    android:layout_height="@dimen/paylayervip_scrollview_height"
                    android:layout_centerInParent="true"
                    >

                    <LinearLayout
                        android:id="@+id/scroll_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"/>

                </cn.ismartv.tvhorizontalscrollview.TvHorizontalScrollView>

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="@dimen/paylayervip_width"
                    android:layout_height="@dimen/paylayervip_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_paylayervip_rightarrow"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>