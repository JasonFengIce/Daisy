<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popwindow_bg">


        <TextView
            android:id="@+id/txt_info"
            android:layout_width="@dimen/pop_text_width"
            android:layout_height="@dimen/pop_text_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/pop_first_text_margin_top"
            android:gravity="center"
            android:text="@string/exit_prompt"
            android:textSize="@dimen/h2_text_size" />

        <TextView
            android:id="@+id/pop_second_text"
            android:layout_width="@dimen/pop_text_width"
            android:layout_height="@dimen/pop_text_height"
            android:layout_below="@id/txt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/pop_second_text_margin_top"
            android:gravity="center"
            android:textSize="@dimen/h2_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pop_btn_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/pop_btn_margin_bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/confirm_exit"
                android:layout_width="@dimen/pop_btn_width"
                android:layout_height="@dimen/pop_btn_height"
                android:background="@drawable/selector_daisy_exit_button"
                android:text="@string/confirm"
                android:textColor="@android:color/white"
                android:textSize="@dimen/h2_text_size"
                android:focusable="true"
                android:focusableInTouchMode="true"
                 />

            <Button
                android:id="@+id/cancel_exit"
                android:layout_width="@dimen/pop_btn_width"
                android:layout_height="@dimen/pop_btn_height"
                android:layout_marginLeft="@dimen/pop_btn_margin_lr"
                android:background="@drawable/selector_daisy_exit_button"
                android:text="@string/cancel"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/h2_text_size" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>