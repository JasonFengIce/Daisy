<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_width="@dimen/filter_list_item_title_w"
        android:layout_height="match_parent"
  >

        <tv.ismar.daisy.views.AsyncImageView
            android:id="@+id/itemImage"
            android:layout_width="@dimen/filter_list_item_title_w"
            android:layout_height="@dimen/filter_list_item_preview_img_h"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:background="@drawable/list_item_preview_bg"/>

        <Button
            android:id="@+id/iv_type"
            android:layout_width="@dimen/search_gridview_item_btn_type_W"
            android:layout_height="@dimen/search_gridview_item_btn_type_H"
            android:layout_alignLeft="@+id/itemImage"
            android:layout_alignTop="@id/itemImage"
            android:layout_marginLeft="@dimen/search_gridview_item_btn_type_marginL"
            android:focusable="false"
            android:textColor="@color/hotwords_text_color"
            android:textSize="@dimen/search_gridview_item_btn_type_textsize" 
            />
      <TextView
       android:id="@+id/expense_txt"
       android:layout_width="123dip"
       android:layout_height="40dip"
       android:textStyle="bold"
       android:textSize="20sp"
       android:gravity="center"
       android:layout_alignBottom="@id/itemImage"
       android:layout_alignLeft="@id/itemImage"
       android:background="@drawable/vodcategory_gv_item_price"
       android:visibility="gone" >        
    </TextView>
        <tv.ismar.daisy.views.MarqueeText
            android:id="@+id/itemText"
            android:layout_width="@dimen/filter_list_item_title_w"
            android:layout_height="match_parent"
            android:layout_below="@+id/itemImage"
            android:paddingTop="@dimen/filter_list_item_title_mt"
            android:paddingBottom="@dimen/filter_list_item_title_pb"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="@dimen/search_gridview_item_text_size"
            android:textStyle="bold"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:textColor="#ffffffff"
            android:focusable="true">

        </tv.ismar.daisy.views.MarqueeText>



    <tv.ismar.daisy.views.AsyncImageView
            android:id="@+id/iv_label"
            android:layout_width="@dimen/search_gridview_item_label_W"
            android:layout_height="@dimen/search_gridview_item_label_H"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/search_gridview_item_label_marginR"
            android:layout_marginTop="@dimen/search_gridview_item_label_marginT"
            android:visibility="gone"/>

    </RelativeLayout>


